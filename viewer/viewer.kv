#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<Widget>:
    # default: transparent
    border_color: (1, 1, 1, 0)

    canvas.after:
        Color:
            rgba: self.border_color

        Line:
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1
            dash_offset: 5
            dash_length: 3

<PlayerScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: None
            height: 50
            text: "Map Viewer: %s" % app.IPAddress

        FogOfWar:
            id: fog
            texture: root.map_texture
            dm: False
            #border_color: (1, 1, 0, 1)

            do_rotation: True
            do_translation: True
            do_scale: True

            Label:
                text: "No map loaded"
                font_size: '50sp'
                color: (1, 0, 0, 1) if root.ids.fog.texture is None else (0, 0, 0, 0)



<ImageScreen>:
    FloatLayout:
        ScatterLayout:
            auto_bring_to_front: False
            Image:
                texture: root.image_texture

        Button:
            size_hint: None, None
            pos_hint: {'right': 1, 'top': 1}
            size: 50, 50
            text: "Close"
            on_release: app.root.go_back()
